{
    "tasks": {
        "clean": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^build", "clean"],
            "cache": true,
            "inputs": ["src/**", "tsconfig.json", "package.json", "babel.config.js"],
            "outputs": ["dist/**", "lib/**"]
        },
        "package": {
            "dependsOn": ["build"],
            "inputs": ["dist/**"],
            "env": ["PACKAGE_DEST"]
        },
        "posthog-js#package": {
            "dependsOn": ["@posthog/react#build"],
            "inputs": ["dist/**", "lib/**", "react/**"],
            "env": ["PACKAGE_DEST"]
        },
        "lint": {
            "dependsOn": []
        },
        "lint:fix": {
            "dependsOn": []
        },
        "test:unit": {
            "cache": false
        },
        "test:functional": {},
        "test:e2e": {},
        "test": {
            "dependsOn": ["lint", "test:unit", "test:functional", "test:e2e"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
