{
    "tasks": {
        "clean": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^build", "clean"],
            "cache": false
        },
        "lint": {
            "dependsOn": []
        },
        "lint:fix": {
            "dependsOn": []
        },
        "test:unit": {
            "cache": false
        },
        "test:functional": {},
        "test:e2e": {},
        "test": {
            "dependsOn": ["lint", "test:unit", "test:functional", "test:e2e"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
