{
    "extends": "@posthog-tooling/tsconfig-base",
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "lib": ["ES2022", "DOM"],
        "outDir": "dist",
        "rootDir": "src",
        "types": ["node", "jest"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
