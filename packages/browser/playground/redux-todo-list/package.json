{
  "name": "redux-todo-list",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "esbuild src/app.ts --bundle --outfile=dist/app.js --format=iife --global-name=TodoApp",
    "watch": "esbuild src/app.ts --bundle --outfile=dist/app.js --format=iife --global-name=TodoApp --watch",
    "serve": "pnpm dlx serve .",
    "format": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "esbuild": "^0.19.12",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "redux": "^5.0.0"
  }
}