{
  "extends": "@posthog-tooling/tsconfig-base",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "Node16",
    "moduleResolution": "Node16",
    "isolatedModules": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2023",
    // DOM should be removed here
    "lib": ["ES2023", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "rslib.config.ts"]
}
