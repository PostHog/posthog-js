{
  "extends": "@posthog-tooling/tsconfig-base",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2015"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
