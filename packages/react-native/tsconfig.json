{
  "extends": "@posthog-tooling/tsconfig-base",
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": ["index.ts", "src/**/*.ts", "src/**/*.tsx"]
}
