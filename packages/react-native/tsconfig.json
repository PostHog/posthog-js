{
  "extends": "@posthog-tooling/tsconfig-base",
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "incremental": false,
    "lib": ["ESNext"],
    "module": "ES2015",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": ["index.ts", "src/**/*.ts", "src/**/*.tsx"]
}
