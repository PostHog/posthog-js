{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "esModuleInterop": true,
        "declaration": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "target": "es2020",
        "sourceMap": true,
        "noEmit": false,
        "incremental": true,
        "strict": true,
        "rootDir": ".",
        "lib": ["es2022"],
        "types": ["node", "jest"]
    }
}
