{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "declaration": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "target": "es2020",
        "sourceMap": true,
        "noEmit": false,
        "incremental": true,
        "strict": true,
        "rootDir": ".",
        "lib": ["ES2020"],
        "types": ["node", "jest"]
    }
}
