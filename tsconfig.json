{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "ES5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "checkJs": true,
        // set to true because of a bug in rrweb
        // https://rrweb.slack.com/archives/C01BYDC5C93/p1720013675174369?thread_ts=1720008343.495629&cid=C01BYDC5C93
        // hopefully can be returned to false when we upgrade rrweb next
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es2015",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "inlineSources": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "declaration": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment"
    },
    "include": ["src/**/*.ts*"],
    "exclude": ["src/__tests__/**/*.ts*"]
}
